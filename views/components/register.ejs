
<form class="register-form" action="/register" method="post">
    <span>
        <%-
            typeof err !== 'undefined' ? err.msg : ''
        %>
    </span>
    <fieldset class="register-form__fieldset">
        <legend class="register-form__legend">Register a new account.</legend>
        <label class="register-form__label" for="displayName">Display name*</label>
        <input class="register-form__input" type="text" name="displayName" id="displayName" required>

        <label class="register-form__label" for="password">Password*</label>
        <input class="register-form__input register-form__input--password" type="password" name="password" id="password" required>

        <label class="register-form__label" for="email">Email*</label>
        <input class="register-form__input" type="email" name="email" id="email" required>
    </fieldset>

    <fieldset class="register-form__fieldset">
        <legend class="register-form__legend">Who are you?</legend>
        <label class="register-form__label" for="firstName">First name*</label>
        <input class="register-form__input" type="text" name="firstName" id="firstName" required>

        <label class="register-form__label" for="middleName">Middle name</label>
        <input class="register-form__input" type="text" name="middleName" id="middleName">

        <label class="register-form__label" for="lastName">Last name*</label>
        <input class="register-form__input" type="text" name="lastName" id="lastName" required>

        <label class="register-form__label" for="gender">Gender*</label>
        <select class="register-form__select" name="gender" id="gender">
            <option value="female">Female</option>
            <option value="male">Male</option>        
        </select>

        <label class="register-form__label" for="dob">Date of Birth*</label>
        <input class="register-form__input register-form__input--date" type="date" name="dob" id="dob" required>
        
        <label class="register-form__label" for="hidePersonalData">Hide this data from other users? (You can change this later)</label>
        <input class="register-form__input register-form__input--checkbox" type="checkbox" name="hidePersonalData" id="hidePersonalData" checked="true">
    </fieldset>
    <fieldset class="register-form__fieldset">
        <legend class="register-form__legend">What are you like?</legend>

        <label class="register-form__label" for="bio">Tell us a little something about yourself!</label>
        <textarea class="register-form__input register-form__input--textarea" name="bio" id="bio" cols="30" rows="10" placeholder="I've thought about getting 7 cats, but then..."></textarea>

        <label class="register-form__label" for="favoriteColor">What's your favorite color?</label>
        <input class="register-form__input register-form__input--color" type="color" name="favoriteColor" id="favoriteColor" required>
    </fieldset>
    <input type="submit" value="register">
</form>